{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES2017", "DOM", "ES6"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "dist",
    "types": ["chrome"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
} 