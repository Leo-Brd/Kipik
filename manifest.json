{
  "manifest_version": 2,
  "name": "Kipik",
  "version": "1.0",
  "description": "Kipik analyse les sites web et révèle leur stack et infos cachées.",
  "icons": {
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
